<!DOCTYPE html>
<html lang="tr">
<%- include('../partials/shop-head', { title: product.name }) %>

  <body>
    <%- include('../partials/shop-header') %>
      <main class="page page-product">
        <section class="product-hero">
          <div class="container product-hero-inner">
            <nav class="breadcrumbs">
              <a href="/">Mağaza</a>
              <span>/</span>
              <span>
                <%= product.name %>
              </span>
            </nav>
            <div class="product-hero-copy">
              <h1>
                <%= product.name %>
              </h1>
              <p>
                <%= product.description %>
              </p>
              <div class="hero-meta">
                <span class="price">
                  <%= product.price.toFixed(2) %> ₺
                </span>
                <span class="stock">Stok: <%= product.stock %> adet</span>
              </div>
            </div>
          </div>
        </section>

        <section class="container product-detail">
          <%- include('../partials/flash') %>
            <div class="product-gallery">
              <% if (product.imageUrl) { %>
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                <% } else { %>
                  <div class="image-placeholder">
                    <span>Görsel Yakında</span>
                  </div>
                  <% } %>
            </div>
            <aside class="product-info">
              <div class="product-summary">
                <form action="/cart/add" method="POST" class="add-form">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="productId" value="<%= product.id %>">
                  <label>
                    Adet
                    <input type="number" name="quantity" value="1" min="1">
                  </label>
                  <button type="submit" class="btn btn-primary">Sepete Ekle</button>
                  <a href="/cart" class="btn btn-ghost">Sepeti Gör</a>
                </form>
                <ul class="summary-meta">
                  <li>
                    <span>Paket</span>
                    <strong>
                      <%= product.grams %> g
                    </strong>
                  </li>
                  <li>
                    <span>İçerik</span>
                    <strong>
                      <%= product.contentsText %>
                    </strong>
                  </li>
                  <li>
                    <span>Teslimat</span>
                    <strong>
                      <%= settings.product_detail_delivery_text %>
                    </strong>
                  </li>
                </ul>
              </div>
            </aside>
        </section>
      </main>
      <%- include('../partials/shop-footer') %>
  </body>

</html>